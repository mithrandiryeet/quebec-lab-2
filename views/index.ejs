<%- include('partials/html-head') %>

    <body class="container-fluid">

        <div class="row">
            <div class="col-md-6">
                <h2>Update Your Profile Name</h2>

                <%= console.log(profileData) %>

                <% for (var i=0; i< profileData.length; i++ ) { %>
                    <form method="POST">
                        <input type="hidden" id="devId" name="devId" value="<%= profileData[i]._id %>"></input>
                        <input
                            type="text"
                            id="devName"
                            name="devName"
                            value="<%= profileData[i].name %>"></input>

                        <button class="btn btn-primary" type="submit" formaction="/updateProfile">Update Name</button>
                        <button class="btn btn-warning" type="submit" formaction="/deleteProfile">Delete
                        </button>

                    </form>
                    <br/>
                <% } %>
            </div>

            <div class="col-md-6">

                <h2>
                    New Dev Name</h2>

                <form action="/insertProfile" method="POST">

                    <input
                        type="text"
                        id="newDevName"
                        name="newDevName"
                        placeholder="enter a name here"></input>

                    <button class="btn btn-primary" type="submit">Submit</button>

                </form>

            </div>
        </div>

    </body>
</html>